<header class="w-full text-white bg-gray-100 mb-8 border-b-2 border-@Colors.Primary">
    <div class="flex flex-row items-center justify-between py-2 md:py-3 px-4 md:px-8 ">
        <div class="flex flex-row items-center justify-between">
            <NavLink class="flex items-center"
                     href="" Match="NavLinkMatch.All">
                <img src="img/logos/blue.png" class="w-8 h-8 mr-2" alt="Logo">
                <strong class="hidden md:block uppercase text-@Colors.Primary hover:text-@Colors.PrimaryDarker tracking-widest text-2xl">Celebrity</strong>
            </NavLink>
        </div>
        <nav class="text-sm flex justify-end items-center flex-row space-x-2 text-@Colors.Primary hover:text-@Colors.PrimaryLighter">


            <NavLink class="@InactiveText"
                     href="play" ActiveClass=@ActiveText>

                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z">

                    </path>
                </svg>
                <span class="hidden md:block pl-1">
                    New game
                </span>
            </NavLink>

        </nav>
    </div>
</header>


@code {
    public static string InactiveText = $"flex items-center px-4 py-2 font-semibold rounded-lg";
    public static string ActiveText = $"text-white bg-{Colors.Primary} hover:text-white";
}

