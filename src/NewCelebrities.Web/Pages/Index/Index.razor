@page "/"
@inject IStringLocalizer<Index> L

<PageTitle>Celebrity</PageTitle>

<div class="mx-auto max-w-3xl">

    <section class="text-gray-600 body-font overflow-hidden">
        <div class="-my-8 divide-y-2 divide-gray-100">
            <a href="setup" class="cursor-pointer py-8 flex flex-wrap md:flex-nowrap hover:bg-gray-50">
                <div class="md:flex-grow px-8 py-4">
                    <h2 class="text-2xl font-medium text-gray-900 title-font mb-2">@L["TimesUpMode"]</h2>
                    <p class="leading-relaxed">@L["TimesUpModeDescription"]</p>
                    <span class="@Styles.DefaultLink inline-flex items-center uppercase">
                        @L["TimesUpModeLink"]
                        <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                            <path d="M5 12h14"></path>
                            <path d="M12 5l7 7-7 7"></path>
                        </svg>
                    </span>
                </div>
            </a>
        </div>
    </section>

    <section class="text-gray-600 body-font overflow-hidden">
        <div class="-my-8 divide-y-2 divide-gray-100">
            <a class="cursor-pointer py-8 flex flex-wrap md:flex-nowrap hover:bg-gray-50">
                <div class="md:flex-grow px-8 py-4">
                    <h2 class="text-2xl font-medium text-gray-900 title-font mb-2">@L["SoloMode"] <span class="font-mono text-sm">- Coming soon -</span></h2>
                    <p class="leading-relaxed">@L["SoloModeDescription"]</p>
                </div>
            </a>
        </div>
    </section>
</div>
